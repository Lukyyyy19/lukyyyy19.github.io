@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<a button type="button" class="btn btn-success" asp-area="" asp-page="/Create">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
    </svg>
    Add Record
</a>
<button type="button" class="btn btn-primary" onclick="calculate()">Calculate calories</button>
<table id="records" class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Records[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Records[0].Quantity)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Records)
    {
        <tr class="list-row">
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a button type="button" class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                <a button type="button" class="btn btn-primary" asp-page="./Update" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <p class="col-sm-10 text-primary d-inline">Total Calories: </p>
    <p id="result" class="text-primary d-inline"></p>
</div>